  "html": "<!DOCTYPE html>\n<html dir=\"rtl\" lang=\"ar\">\n<head>\n<style>\n@page {\n    margin: 1mm;\n    size: A4;\n}\n\nbody {\n    font-family: Arial, sans-serif;\n    font-size: 8px;\n    margin: 0;\n    padding: 0;\n}\n\n.page {\n    position: relative;\n    box-sizing: border-box;\n    padding: 1mm;\n    min-height: 100vh;\n    display: flex;\n    flex-direction: column;\n}\n\n.content-wrapper {\n    flex: 1;\n    display: flex;\n    flex-direction: column;\n}\n\n.header-section {\n    /* Reduced margin after header */\n    margin-bottom: 5px;\n}\n\n.header-image {\n    width: 100%;\n    display: block;\n}\n\n.header-content {\n    display: flex;\n    justify-content: space-between;\n    align-items: center;\n    padding: 5px 10px;\n    font-size: 14px;  /* Increased base font size */\n    font-weight: bold; /* Made all content bold */\n}\n\n.header-content > div {\n    font-weight: bold;\n}\n\n.header-content h1 {\n    margin: 0;\n    font-size: 18px; /* Increased title font size */\n    font-weight: bold;\n}\n\n.data-section {\n    /* Reduced spacing before footer */\n    margin-bottom: 10px;\n}\n\n.info-section {\n    display: flex;\n    justify-content: space-between;\n    gap: 20px;\n    /* Reduced margin around info section */\n    margin: 5px 0;\n}\n\n.info-box {\n    flex: 1;\n    border: 1px solid black;\n    padding: 5px;\n}\n\n.info-box p {\n    margin: 3px 0;\n}\n\ntable {\n    width: 100%;\n    border-collapse: collapse;\n    /* Reduced margin around table */\n    margin: 5px 0;\n}\n\nth, td {\n    border: 1px solid black;\n    /* Reduced cell padding */\n    padding: 3px;\n    text-align: center;\n    vertical-align: middle;\n    line-height: .8;    /* Reduced line height */\n    font-size: 0.9em;  /* Slightly smaller font size */\n}\n\nth {\n    background-color: #f2f2f2;\n}\n\n.item-image {\n    max-width: 50px;\n    max-height: 50px;\n    object-fit: contain;\n}\n\n.totals table {\n    width: 100%;\n    margin-left: auto;\n}\n\n.totals td:first-child {\n    text-align: right;\n    font-weight: bold;\n}\n\n\n    .َquo-footer {\n    width: 100%;\n    text-align: center;\n    font-size: 12px;\n    margin-top: 20px;\n    padding-top: 10px;\n    border-top: 1px solid #000;\n    display: flex;\n    justify-content: center;\n    align-items: center;\n}\n\n.quo-footer .spacer {\n    width: 10cm;\n}\n\n.quo-footer span {\n    display: inline-block;\n}\n}\n</style>\n</head>\n<body>\n{% set items_per_page = 15 %}  <!-- Increased from 10 to 15 items per page -->\n{% set total_pages = ((doc.items|length - 1) // items_per_page) + 1 %}\n\n{% for page_num in range(total_pages) %}\n<div class=\"page\">\n    <div class=\"content-wrapper\">\n    <div class=\"header-section\">\n        <img src=\"/files/Screenshot 2024-12-26 at 7.39.47 AM.png\" alt=\"Header Image\" class=\"header-image\">\n        <div class=\"header-content\">\n            <div style=\"font-weight: bold;\">التاريخ: {{ doc.transaction_date }}</div>\n            <h1 style=\"margin: 0; font-size: 18px; font-weight: bold;\">عرض أسعار Quotation</h1>\n            <div style=\"font-weight: bold;\">رقم العرض: {{ doc.name }}</div>\n        </div>\n    </div>\n\n        <div class=\"data-section\">\n            {% if page_num == 0 %}\n            <div class=\"info-section\">\n                <div class=\"info-box\">\n                    <p>السادة / {{ doc.customer_name }}</p>\n                    <p>عناية السيد / {{ doc.contact_display }}</p>\n                    <p>تليفون / {{ doc.contact_mobile }}</p>\n                </div>\n                <div class=\"info-box\">\n                    <p>ساري حتى / {{ doc.valid_till }}</p>\n                    <p></p>\n                    <p></p>\n                    <p></p>\n                </div>\n            </div>\n                \n            {% endif %}\n\n            <table>\n                <thead>\n                    <tr>\n                        <th>رقم</th>\n                        <th>صورة</th>\n                        <th>البيــــــــــــــــــان</th>\n                        <th>الكمية</th>\n                        <th>السعر</th>\n                        <th>الخصم</th>\n                        <th>المجموع</th>\n                    </tr>\n                </thead>\n                <tbody>\n                    {% set start_idx = page_num * items_per_page %}\n                    {% set end_idx = start_idx + items_per_page %}\n                    {% for item in doc.items[start_idx:end_idx] %}\n                    <tr>\n                        <td>{{ loop.index + start_idx }}</td>\n                        <td>\n                            {% if item.image %}\n                            <img src=\"{{ item.image }}\" alt=\"{{ item.item_name }}\" class=\"item-image\">\n                            {% endif %}\n                        </td>\n                        <td>{{ item.item_name }}</td>\n                        <td>{{ item.qty | round | int }}</td>\n                        <td>{{ \"{:,.2f}\".format(item.rate) }}</td>\n                        <td>{{ \"{:,.2f}\".format(item.discount_amount|default(0)) }}</td>\n                        <td>{{ \"{:,.2f}\".format(item.amount) }}</td>\n                    </tr>\n                    {% endfor %}\n                </tbody>\n            </table>\n\n            {% if page_num == total_pages - 1 %}\n            <div class=\"totals\">\n                <table>\n                    <tr>\n                        <td>الإجمالي / Total</td>\n<td>{{ \"{:,.2f}\".format(doc.total) }}</td>\n</tr>\n<tr>\n    <td>الخصم / Discount :</td>\n    <td>{{ \"{:,.2f}\".format(doc.discount_amount|default(0)) }}</td>\n</tr>\n<tr>\n    <td>ضريبة القيمة المضافة VAT / 15%</td>\n    <td>{{ \"{:,.2f}\".format(doc.total_taxes_and_charges) }}</td>\n</tr>\n<tr>\n    <td>المجموع / Total</td>\n    <td>{{ \"ريال{:,.2f}\".format(doc.grand_total) }}</td>\n                    </tr>\n                </table>\n                </div>\n           <p style=\"text-align: right; margin-top: 10px; margin-right: 1cm; font-size: 12px;\" class=\"arabic\">\n         {{ frappe.utils.money_in_words(doc.grand_total, doc.currency).replace('SAR', '') }} ريال سعودي\n        </p>\n            </div>\n            {% endif %}\n        </div>\n    </div>\n    \n    <div class=\"quo-footer\">\n    <span></span>\n    <span class=\"separator\">|</span>\n    <span>البائع: {{ frappe.get_fullname(doc.owner) }}</span>\n\n</div>\n{% endfor %}\n</body>\n</html>",
