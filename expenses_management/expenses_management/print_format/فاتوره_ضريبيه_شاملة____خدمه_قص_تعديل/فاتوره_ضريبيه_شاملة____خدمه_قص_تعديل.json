 "html": "{% set customer = doc.customer %}\r\n{% set ctax_id = frappe.get_doc(\"Customer\", customer).tax_id %}\r\n{% if doc.customer_address %}\r\n    {% set addr = frappe.get_doc(\"Address\", doc.customer_address) %}\r\n{% endif %}\r\n{% set comp = frappe.get_doc(\"Company\", doc.company) %}\r\n{% set company_logo = \"/assets/expenses_management/images/logo.jpeg\" %}\r\n{% set color = \"#333333\" %}\r\n{% set links = frappe.get_all('Dynamic Link', filters={'link_doctype': 'Company', 'link_name': doc.company, 'parenttype': 'Address'}, fields=['parent']) %}\r\n{% if links %}\r\n    {% set address = frappe.get_doc(\"Address\", links[0].parent) %}\r\n{% endif %}\r\n\r\n\r\n<header style=\"display:flex; justify-content: space-between; align-items: center\">\r\n\r\n     <div style=\"text-align: center\">\r\n        {% if doc.is_return == 0 %}\r\n                <div style=\"font-size:28px;font-weight:bold;color:#1a5276;\">\u0641\u0627\u062a\u0648\u0631\u0629 \u0636\u0631\u064a\u0628\u064a\u0629</div>\r\n                <div style=\"font-size:24px;font-weight:bold;color:#1a5276;\">TAX INVOICE</div>\r\n        {% else %}\r\n                <div style=\"font-size:28px;font-weight:bold;color:#1a5276;\">\u0645\u0631\u062a\u062c\u0639</div>\r\n                <div style=\"font-size:24px;font-weight:bold;color:#1a5276;\">Credit Note</div>\r\n        {% endif %}\r\n\r\n        {% if doc.custom_credit == 1 %}\r\n                <div style=\"color:#e67e22;font-size:12px;font-weight:bold;margin-top:2px;padding:1px 8px;background-color:#fef5e7;border-radius:3px;display:inline-block;border:1px solid #e67e22;\">\u0622\u062c\u0644 / Credit</div>\r\n        {% else %}\r\n                <div style=\"color:#27ae60;font-size:12px;font-weight:bold;margin-top:2px;padding:1px 8px;background-color:#eafaf1;border-radius:3px;display:inline-block;border:1px solid #27ae60;\">\u0645\u062f\u0641\u0648\u0639 / Paid</div>\r\n        {% endif %}\r\n\r\n        {% if doc.docstatus == 2 %}\r\n                <div style=\"color:#c0392b;font-size:10px;font-weight:bold;margin-top:1px;padding:1px 6px;background-color:#fadbd8;border-radius:2px;display:inline-block;\">CANCELLED / \u0645\u0644\u063a\u064a\u0629</div>\r\n        {% elif doc.docstatus == 0 %}\r\n                <div style=\"color:#d35400;font-size:10px;font-weight:bold;margin-top:1px;padding:1px 6px;background-color:#fdebd0;border-radius:2px;display:inline-block;\">DRAFT / \u0645\u0633\u0648\u062f\u0629</div>\r\n        {% endif %}\r\n     </div>\r\n         <img \r\n        style=\"height:160px;width:auto;max-width:360px;\" \r\n        alt=\"Logo\"\r\n        src=\"{{ company_logo }}\" \r\n     />\r\n</header>\r\n\r\n\r\n<!-- Date Row -->\r\n<table class=\"styled-table\" style=\"width:100%;margin:2px 0;\">\r\n    <tr>\r\n        <td style=\"font-size:12px;text-align:center;\">{{ doc.due_date or '' }}</td>\r\n        <td style=\"font-size:12px;text-align:center;\">Due Date / \u0627\u0644\u0627\u0633\u062a\u062d\u0642\u0627\u0642</td>\r\n        <td style=\"font-size:12px;text-align:center;\">{{ doc.posting_date }}</td>\r\n        <td style=\"font-size:12px;text-align:center;\">Issue Date / \u0627\u0644\u0627\u0635\u062f\u0627\u0631</td>\r\n        <td style=\"font-size:12px;text-align:center;\">{{ doc.name }}</td>\r\n        <td style=\"font-size:12px;text-align:center;\">Invoice No / \u0631\u0642\u0645 \u0627\u0644\u0641\u0627\u062a\u0648\u0631\u0629</td>\r\n    </tr>\r\n</table>\r\n\r\n<!-- Customer and Company Info -->\r\n<table style=\"width:100%;border:none;margin:2px 0;\">\r\n    <tr>\r\n        <td style=\"width:49%;border:none;vertical-align:top;padding-right:5px;\">\r\n            <table class=\"styled-table\" style=\"width:100%;\">\r\n                {% if doc.customer %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">To / \u0627\u0644\u0649</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ doc.customer }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if doc.customer_name %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">Customer / \u0627\u0644\u0639\u0645\u064a\u0644</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ doc.customer_name }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if ctax_id %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">TAX ID / \u0627\u0644\u0631\u0642\u0645 \u0627\u0644\u0636\u0631\u064a\u0628\u064a</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ ctax_id }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if addr and addr.address_line1 %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">Address / \u0627\u0644\u0639\u0646\u0648\u0627\u0646</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ addr.address_line1[:30] }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if addr and addr.phone %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">Phone / \u0627\u0644\u0647\u0627\u062a\u0641</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ addr.phone }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n            </table>\r\n        </td>\r\n\r\n        <td style=\"width:49%;border:none;vertical-align:top;padding-left:5px;\">\r\n            <table class=\"styled-table\" style=\"width:100%;\">\r\n                {% if doc.company %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">From / \u0645\u0646</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ doc.company }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if doc.company_tax_id %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">TAX ID / \u0627\u0644\u0631\u0642\u0645 \u0627\u0644\u0636\u0631\u064a\u0628\u064a</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ doc.company_tax_id }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if comp.cr_number %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">CR Number / \u0627\u0644\u0633\u062c\u0644 \u0627\u0644\u062a\u062c\u0627\u0631\u064a</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ comp.cr_number }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if address and address.address_line1 %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">Address / \u0627\u0644\u0639\u0646\u0648\u0627\u0646</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ address.address_line1[:30] }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                {% if comp.phone_no %}\r\n                    <tr>\r\n                        <td style=\"font-size:12px;\">Phone / \u0627\u0644\u0647\u0627\u062a\u0641</td>\r\n                        <td style=\"font-size:12px;text-align:center;\">{{ comp.phone_no }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n            </table>\r\n        </td>\r\n    </tr>\r\n</table>\r\n\r\n<!-- Items Table - NO BORDER -->\r\n<table class=\"items-table\" style=\"width:100%;margin-top:2px;border:none;\">\r\n    <tr style=\"background-color:{{color}};border:none;\">\r\n        <td colspan=\"5\" style=\"text-align:left;color:white;font-size:15px;border-top-left-radius:10px;border:none;\">Item and Services Description</td>\r\n        <td colspan=\"4\" style=\"text-align:right;color:white;font-size:15px;border-top-right-radius:10px;border:none;\">\u062a\u0648\u0635\u064a\u0641 \u0627\u0644\u0633\u0644\u0639\u0629 \u0623\u0648 \u0627\u0644\u062e\u062f\u0645\u0629</td>\r\n    </tr>\r\n\r\n    <tr style=\"font-weight:bold;text-align:center;background-color:#f0f0f0;\">\r\n        <td style=\"width:3%;font-size:11px;border:none;\">S.N<br>\u0631.\u062a</td>\r\n        <td style=\"font-size:11px;border:none;\">Nature of goods / \u062a\u0641\u0627\u0635\u064a\u0644 \u0627\u0644\u0635\u0646\u0641</td>\r\n        <td style=\"width:7%;font-size:11px;border:none;\">Qty<br>\u0627\u0644\u0643\u0645\u064a\u0629</td>\r\n        <td style=\"width:10%;font-size:11px;border:none;\">Unit price<br>\u0633\u0639\u0631 \u0627\u0644\u0648\u062d\u062f\u0629</td>\r\n        <td style=\"width:5%;font-size:11px;border:none;\">Unit<br>\u0627\u0644\u0648\u062d\u062f\u0629</td>\r\n        <td style=\"width:13%;font-size:11px;border:none;\">Taxable Amt<br>\u0627\u0644\u0645\u0628\u0644\u063a \u0627\u0644\u062e\u0627\u0636\u0639</td>\r\n        <td style=\"width:8%;font-size:11px;border:none;\">Tax %<br>\u0627\u0644\u0636\u0631\u064a\u0628\u0629</td>\r\n        <td style=\"width:10%;font-size:11px;border:none;\">Tax Amt<br>\u0645\u0628\u0644\u063a \u0627\u0644\u0636\u0631\u064a\u0628\u0629</td>\r\n        <td style=\"width:14%;font-size:11px;border:none;\">Subtotal<br>\u0627\u0644\u0645\u062c\u0645\u0648\u0639</td>\r\n    </tr>\r\n\r\n    {% set i = [1] %}\r\n    {% for item in doc.items %}\r\n        {% set item_tax_rate = 0 %}{% set item_tax_amount = 0 %}\r\n        {% if doc.taxes and doc.taxes|length > 0 %}\r\n            {% set item_tax_rate = doc.taxes[0].rate or 15 %}\r\n            {% set item_tax_amount = (item.net_amount or 0) * item_tax_rate / 100 %}\r\n        {% endif %}\r\n        {% set item_total = (item.net_amount or 0) + item_tax_amount %}\r\n\r\n        <tr>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">{{ i[0] }}</td>\r\n            <td style=\"font-size:13px;border:none;\">{{ item.item_code }}: {{ item.item_name[:70] }}</td>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">\r\n                {% if (item.qty | int) == item.qty %}\r\n                    {{ item.qty | int }}\r\n                {% else %}\r\n                    {{ item.qty }}\r\n                {% endif %}\r\n            </td>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">{{ \"{:,.2f}\".format(item.rate) }}</td>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">{{ item.uom }}</td>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">{{ \"{:,.2f}\".format(item.net_amount or item.amount) }}</td>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">{{ item_tax_rate }}%</td>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">{{ \"{:,.2f}\".format(item_tax_amount) }}</td>\r\n            <td style=\"font-size:13px;text-align:center;border:none;\">{{ \"{:,.2f}\".format(item_total) }}</td>\r\n        </tr>\r\n\r\n        {% if i.append(i.pop() + 1) %}{% endif %}\r\n    {% endfor %}\r\n</table>\r\n\r\n<!-- Cutting Service Section -->\r\n<div class=\"cutting-service-section\">\r\n    <span style=\"font-size:16px;font-weight:bold;color:#2e7d32;\">\u062e\u062f\u0645\u0629 \u0627\u0644\u0642\u0635 \u0645\u062c\u0627\u0646\u064a\u0629 \u0645\u0646 \u0627\u0644\u0634\u0631\u0643\u0629 / Free Cutting Service from the Company</span>\r\n</div>\r\n\r\n<!-- Totals Section -->\r\n<table style=\"width:100%;border:none;margin-top:2px;\">\r\n    <tr style=\"background-color:{{color}};\">\r\n        <td colspan=\"2\" style=\"color:white;font-size:15px;border-radius:10px 10px 0 0;text-align:center;border:none;\">Total amounts / \u0627\u062c\u0645\u0627\u0644\u064a \u0627\u0644\u0645\u0628\u0627\u0644\u063a</td>\r\n    </tr>\r\n\r\n    <tr style=\"border:none;\">\r\n        <td style=\"width:50%;vertical-align:top;border:none;padding:5px;\">\r\n            <table style=\"width:100%;border:none;\">\r\n                <tr style=\"background-color:#ffffff;\">\r\n                    <td style=\"font-size:12px;border:none;\">Total (Excluding VAT) / \u0627\u0644\u0625\u062c\u0645\u0627\u0644\u064a \u063a\u064a\u0631 \u0634\u0627\u0645\u0644</td>\r\n                    <td style=\"font-size:12px;text-align:right;border:none;\">SAR {{ \"{:,.2f}\".format(doc.net_total) }}</td>\r\n                </tr>\r\n\r\n                {% if doc.discount_amount %}\r\n                    <tr style=\"background-color:#f3f3f3;\">\r\n                        <td style=\"font-size:12px;border:none;\">Discount / \u0627\u0644\u062e\u0635\u0648\u0645\u0627\u062a</td>\r\n                        <td style=\"font-size:12px;text-align:right;border:none;\">SAR {{ \"{:,.2f}\".format(doc.discount_amount) }}</td>\r\n                    </tr>\r\n                {% endif %}\r\n\r\n                <tr style=\"background-color:#f3f3f3;\">\r\n                    <td style=\"font-size:12px;border:none;\">Total VAT / \u0636\u0631\u064a\u0628\u0629 \u0627\u0644\u0642\u064a\u0645\u0629 \u0627\u0644\u0645\u0636\u0627\u0641\u0629</td>\r\n                    <td style=\"font-size:12px;text-align:right;border:none;\">SAR {{ \"{:,.2f}\".format(doc.total_taxes_and_charges) }}</td>\r\n                </tr>\r\n\r\n                <tr style=\"background-color:#ffffff;\">\r\n                    <td style=\"font-size:14px;font-weight:bold;border:none;\">Total Amount Due / \u0625\u062c\u0645\u0627\u0644\u064a \u0627\u0644\u0645\u0633\u062a\u062d\u0642</td>\r\n                    <td style=\"font-size:14px;font-weight:bold;text-align:right;border:none;\">SAR {{ \"{:,.2f}\".format(doc.grand_total) }}</td>\r\n                </tr>\r\n\r\n                <tr style=\"background-color:#f3f3f3;\">\r\n                    <td colspan=\"2\" style=\"font-size:12px;border:none;\">{{ frappe.utils.money_in_words(doc.grand_total | abs, 'SAR', 'Halala') }}</td>\r\n                </tr>\r\n\r\n                <tr style=\"background-color:#ffffff;\">\r\n                    <td style=\"font-size:12px;border:none;\">Issued By / \u062a\u062d\u0631\u0631 \u0628\u0648\u0627\u0633\u0637\u0629:</td>\r\n                    <td style=\"font-size:12px;text-align:right;border:none;\">{{ frappe.db.get_value('User', doc.modified_by, 'full_name') }}</td>\r\n                </tr>\r\n            </table>\r\n        </td>\r\n\r\n        <td style=\"width:50%;vertical-align:middle;border:none;text-align:center;padding:10px;\">\r\n            {% if doc.ksa_einv_qr %}\r\n                <img src=\"{{ doc.ksa_einv_qr }}\" style=\"width:140px;height:140px;\" />\r\n            {% endif %}\r\n        </td>\r\n    </tr>\r\n</table>\r\n\r\n<!-- Fixed Footer at Bottom of Page -->\r\n<footer style=\"\r\nposition: fixed;\r\n    bottom: 0;\r\n    left: 0;\r\n    right: 0;\r\n    width: 100%;\r\n    text-align: center;\r\n    border-top: 2px solid #000;\r\n    padding: 3px 8px;\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\">\r\n    <div>\r\n        <div style=\"font-size:13px;font-weight:bold;color:#333;\">\r\n        \u0627\u0644\u0631\u064a\u0627\u0636: \u0627\u0644\u0635\u0646\u0627\u0639\u064a\u0629 \u0627\u0644\u0642\u062f\u064a\u0645\u0629: 0500174187 | \u0637\u0631\u064a\u0642 \u0627\u0644\u062e\u0631\u062c: 0531674322\r\n        </div>\r\n        <div style=\"font-size:13px;font-weight:bold;color:#333;margin-top:3px;\">\r\n        \u0637\u0631\u064a\u0642 \u0647\u0627\u0631\u0648\u0646 \u0627\u0644\u0631\u0634\u064a\u062f: 0558501303 | \u062c\u062f\u0629: 0533317381\r\n        </div>\r\n    </div>\r\n    <img src=\"{{ company_logo }}\" style=\"height:120px;width:auto;\" alt=\"Logo\" />\r\n</footer>\r\n",
